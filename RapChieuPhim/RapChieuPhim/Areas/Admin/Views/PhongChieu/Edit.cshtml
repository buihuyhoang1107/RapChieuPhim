@model RapChieuPhim.Areas.Admin.Models.PhongChieuModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>PhongChieuModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" id="FormSubmit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Ten_Phong" class="control-label"></label>
                <input asp-for="Ten_Phong" class="form-control" />
                <span asp-validation-for="Ten_Phong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RapPhim_ID" class="control-label"></label>
                <select asp-for="RapPhim_ID" class="form-control" asp-items="@(new SelectList(ViewBag.listRap,"ID","Ten_rap"))"></select>
                <span asp-validation-for="RapPhim_ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-id="@Model.RapPhim_ID">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $("#FormSubmit").submit(function (e) {
            e.preventDefault();
            const post_url = $(this).attr("action");
            const request_method = $(this).attr("method");
            const form_data = $(this).serialize(); //Encode form elements for submission

            console.log(post_url);
            console.log(request_method);
            console.log(form_data);

            $.ajax({
                url: post_url,
                type: request_method,
                data: form_data
            }).done(function (response) { //
                if (response) {
                    alert("Sửa thành công !");
                    location.reload();
                } else {
                    alert("Sửa không thành công !");
                }
            });
        });
    </script>
}
